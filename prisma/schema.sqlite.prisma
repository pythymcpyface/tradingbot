// prisma/schema.sqlite.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:/data/orders.db"
}

model ProductionOrders {
  id                   String   @id @default(cuid())
  orderId              String   @unique
  symbol               String
  side                 String
  type                 String
  quantity             Decimal
  price                Decimal
  stopPrice            Decimal?
  timeInForce          String
  status               String
  executedQty          Decimal
  cummulativeQuoteQty  Decimal
  time                 DateTime
  updateTime           DateTime
  isWorking            Boolean
  origQuoteOrderQty    Decimal
  createdAt            DateTime @default(now())

  @@index([symbol, time])
  @@index([status])
  @@map("production_orders")
}
