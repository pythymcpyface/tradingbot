# Database Configuration
DATABASE_URL="postgresql://tradingbot:secure_password_2024@localhost:5433/tradingbot_glicko"

# For database migration from existing instance
OLD_DATABASE_URL="postgresql://old_user:old_password@localhost:5432/old_database_name"

# Binance API Configuration (get from https://binance.com)
BINANCE_API_KEY="your_binance_api_key_here"
BINANCE_API_SECRET="your_binance_api_secret_here"
BINANCE_TESTNET=true  # Set to false for live trading

# Trading Configuration
COINS="BTC,ETH,ADA,DOT,LINK,UNI,AAVE,SOL,MATIC,AVAX"
Z_SCORE_THRESHOLD=2.5
MOVING_AVERAGES=200
PROFIT_PERCENT=5.0
STOP_LOSS_PERCENT=2.5
MAX_POSITIONS=5
ALLOCATION_PER_POSITION=0.1

# Risk Management
MAX_DAILY_LOSS=100
MAX_DRAWDOWN=10
COOLDOWN_PERIOD=60

# Server Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000

# Redis (optional)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/trading.log

# React App Environment Variables
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000