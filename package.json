{
  "name": "tradingbot-glicko",
  "version": "1.0.0",
  "description": "High-performance cryptocurrency trading bot using Glicko-2 ratings",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/node-api/index.ts",
    "build": "npm run build:rust && npm run build:ts",
    "build:rust": "cd src/rust-core && cargo build --release",
    "build:ts": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "keywords": ["trading", "cryptocurrency", "glicko-2", "backtesting", "binance"],
  "author": "Trading Bot System",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "binance-api-node": "^0.12.4",
    "ws": "^8.14.2",
    "@types/ws": "^8.5.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "prisma": "^5.7.1",
    "husky": "^8.0.3"
  }
}